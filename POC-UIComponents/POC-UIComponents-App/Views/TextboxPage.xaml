<Page x:Class="POC_UIComponents_App.Views.TextboxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:POC.WP.CustomComponents"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Microsoft.Practices.Prism.Mvvm"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <controls:CustomTextBox Width="300"
                                        Height="60"
                                        Margin="0,10,0,10"
                                        BorderAnimationTime="0:0:1"
                                        BorderColor="Green"
                                        Foreground="DarkRed"
                                        PlaceHolderAnimationTime="0:0:0.1"
                                        PlaceHolderForeground="DarkBlue"
                                        PlaceHolderText="Cidade"
                                        SelectedBorderThickness="6" />
                <controls:CustomTextBox Height="100"
                                        Margin="0,10,0,10"
                                        Background="LightGray"
                                        BorderAnimationTime="0:0:0.8"
                                        BorderColor="Green"
                                        Foreground="DarkRed"
                                        InputScope="Number"
                                        PlaceHolderAnimationTime="0:0:0.3"
                                        PlaceHolderForeground="DarkBlue"
                                        PlaceHolderText="Idade"
                                        SelectedBorderThickness="6" />
                <controls:CustomTextBox Height="150"
                                        Margin="0,10,0,10"
                                        Background="LightGray"
                                        BorderAnimationTime="0:0:0.8"
                                        BorderColor="Green"
                                        Foreground="DarkRed"
                                        PlaceHolderAnimationTime="0:0:0.3"
                                        PlaceHolderForeground="DarkBlue"
                                        PlaceHolderText="Nome"
                                        SelectedBorderThickness="6" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
