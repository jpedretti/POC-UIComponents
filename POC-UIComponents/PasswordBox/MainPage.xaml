<Page x:Class="PasswordBox.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:PasswordBox"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="White"
      FontFamily="Global User Interface"
      mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <local:CustonPasswordBox x:Name="custonPasswordBox"
                                     Height="100"
                                     BorderColor="Gray"
                                     CharacterCount="10"
                                     CustonBackgroundColor="LightGray"
                                     ImageSource="/Assets/card.png"
                                     NotTypedColor="Green"
                                     TypedColor="Orange" />

            <Button Background="Blue"
                    Click="Button_Click"
                    Content="teste" />

            <TextBlock x:Name="textBlocMostraSenha"
                       FontSize="30"
                       Foreground="Black" />
        </StackPanel>
    </Grid>
</Page>
