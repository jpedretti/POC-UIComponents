<UserControl x:Name="userControl"
    x:Class="POC.WP.CustomComponents.NavigationSearchBar.CustomNavigationSearchBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POC.WP.CustomComponents.NavigationSearchBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400">

    <Grid x:Name="mainNavigationGrid" Background="{Binding Background}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Back button -->
        <Button Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="Transparent"
                Foreground="Transparent" 
                MinWidth="0" MinHeight="0"
                Visibility="{Binding SearchButtonVisibility}"
                MaxWidth="{Binding ActualHeight, ElementName=userControl}">
            <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                   Source="{Binding BackIconPath}" />
        </Button>
        <Rectangle Grid.Column="0" Fill="Black"
                   Visibility="{Binding BackButtonVisibility}" 
                   MinWidth="{Binding ActualHeight, ElementName=userControl}"
                   MaxWidth="{Binding ActualHeight, ElementName=userControl}" />

        <!-- Center room -->
        <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="10,0" 
                   FontSize="{Binding FontSize}" 
                   FontWeight="{Binding FontWeight}" 
                   Text="{Binding Text}"/>

        <TextBox Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"
                 Visibility="Visible" 
                 Text="{Binding SearchTerm, Mode=TwoWay}" 
                 Background="{Binding Background}" 
                 BorderBrush="{Binding Background}" />

        <!-- Search button -->
        <Button Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="Transparent"
                Foreground="Transparent" 
                MinWidth="0" MinHeight="0"
                Visibility="{Binding SearchButtonVisibility}"
                MaxWidth="{Binding ActualHeight, ElementName=userControl}">
            <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                   Source="{Binding SearchIconPath}" />
        </Button>
        <Rectangle Grid.Column="2" Fill="Black" 
                   Visibility="{Binding SearchButtonVisibility}"
                   MinWidth="{Binding ActualHeight, ElementName=userControl}"
                   MaxWidth="{Binding ActualHeight, ElementName=userControl}" />

    </Grid>
    
</UserControl>
