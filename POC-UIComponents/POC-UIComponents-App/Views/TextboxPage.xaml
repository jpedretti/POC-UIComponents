<Page x:Class="POC_UIComponents_App.Views.TextboxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:POC.WP.CustomComponents"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Microsoft.Practices.Prism.Mvvm"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">

    <Grid>
        <controls:CustomTextBox Height="100"
                                Background="CadetBlue"
                                BorderAnimationTime="0:0:0.8"
                                BorderColor="Green"
                                FontSize="30"
                                Foreground="DarkRed"
                                PlaceHolderAnimationTime="0:0:0.3"
                                PlaceHolderForeground="Blue"
                                PlaceHolderText="Celular"
                                SelectedBorderThickness="6" />
    </Grid>
</Page>
